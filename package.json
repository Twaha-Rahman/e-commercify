{
  "name": "e-commercify",
  "version": "1.0.0",
  "description": "E-commercify is a full open source E-commerce site from the frontend to the backend.",
  "main": "main.js",
  "scripts": {
    "start": "node src/main.js",
    "dev": "npm-run-all --parallel debug frontend",
    "frontend": "cd frontend && npm run dev",
    "debug": "nodemon --inspect src/main.js",
    "test": "jest && cd frontend && jest",
    "lint": "npx eslint .",
    "fill-db": "node tools/sampleDBDataInjector.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Twaha-Rahman/e-commercify.git"
  },
  "keywords": [
    "e-commerce"
  ],
  "author": "Twaha-Rahman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Twaha-Rahman/e-commercify/issues"
  },
  "homepage": "https://github.com/Twaha-Rahman/e-commercify#readme",
  "dependencies": {
    "argparse": "^2.0.1",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "mongoose": "^5.10.5",
    "helmet": "^4.1.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "strip-ansi": "^6.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,md}": "prettier --write"
  }
}
