{
  "name": "e-commercify",
  "version": "1.0.0",
  "description": "E-commercify is a full open source E-commerce site from the frontend to the backend.",
  "main": "main.js",
  "scripts": {
    "start": "node src/main.js",
    "dev": "npm-run-all --parallel debug frontend",
    "frontend": "cd frontend && npm run dev",
    "debug": "nodemon --inspect src/main.js",
    "test": "jest",
    "lint": "npx eslint .",
    "fill-db": "node tools/sampleDBDataInjector.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Twaha-Rahman/e-commercify.git"
  },
  "keywords": [
    "e-commerce"
  ],
  "author": "Twaha-Rahman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Twaha-Rahman/e-commercify/issues"
  },
  "homepage": "https://github.com/Twaha-Rahman/e-commercify#readme",
  "dependencies": {
    "argparse": "^1.0.10",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "mongoose": "^5.9.26"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.1",
    "eslint": "^7.5.0",
    "eslint-config-preact": "^1.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write"
    ],
    "*.{css,md}": "prettier --write"
  }
}
